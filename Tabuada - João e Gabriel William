using System;
class Tabuada
{
    static void Main() 
    {
        Console.WriteLine("====BEM VINDO A TABUADA==== \n");
        
        string resposta;
        
        do
        {
            Console.WriteLine("Digite um número para que sua tabuada seja exibida \n");
            float num1 = float.Parse(Console.ReadLine());
            Console.WriteLine("\n");
            
            for (int i = 1; i <= 10; i++)
            {
            Console.WriteLine(num1 + " x " + i + " = " + (num1*i));
            }
                
            Console.WriteLine("Deseja continuar calculando? (sim ou não) \n");
            resposta = Console.ReadLine().ToLower();

        }
        while (resposta == "sim");
            Console.WriteLine("\nPrograma encerrado.");
    }
}
